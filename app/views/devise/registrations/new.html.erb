<div class="container">

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'form-signin'}) do |f| %>

      <h2 class="form-signin-heading">Sign up</h2>

      <%= devise_error_messages! %>

      <div class="field">
        <%= f.label :email, class: 'sr-only' %>
        <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: 'Email Address' %>
      </div>
      <p/>

      <div>
        <%= f.label :nickname, class: 'sr-only' %>
        <%= f.text_field :nickname, auto_complete: "off", class: 'form-control', placeholder: 'nickname' %>
      </div>
      <p/>

      <div class="field">
        <%= f.label :password, class: 'sr-only' %>
        <% content = 'Password' %>
        <% if @minimum_password_length %>
            <% content = content+ "(" + @minimum_password_length.to_s + " characters minimum)" %>
        <% end %>
        <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: content %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, class: 'sr-only' %>
        <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: 'Password Confirmation' %>
      </div>

      <div class="actions">
        <%= f.submit "Sign up", class: 'btn btn-lg btn-primary btn-block' %>
      </div>
  <% end %>

  <center>
    <%= render "devise/shared/links" %>
  </center>
</div> <!-- /container -->
