<div class='container'>

  <%= form_for @type, url: types_path, html:{class: 'form-signin'} do |f| %>

      <h2 class="form-signin-heading">新增漫画类型</h2>

      <%= f.label :name, '类型名称', class: 'sr-only' %>
      <%= f.text_field :name, auto_complete: "off", class: 'form-control', placeholder: '类型名称' %>

      <br/>

      <p><%= f.submit '提交', class: 'btn btn-lg btn-primary btn-block' %></p>

      <center><%= button_to '返回主页', comics_path, class: 'btn btn-sm btn-primary' %> </center>
  <% end %>


</div>

