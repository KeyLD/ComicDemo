<div class='container'>

  <%= form_for @comic, :url => comics_path, :html => {:multipart => true} do |t| %>

      <%= t.label :name, '漫画名称'%>
      <%= t.text_field :name %>

      <br/>

      <%= t.label :time, '出版时间' %>
      <%= t.text_field :time, 'data-behaviour' => 'datepicker'%>
      <br/>

      <%= t.label :introduce, '漫画简介' %>
      <%= t.text_area :introduce, size: "30x5" %>
      <br/>

      <br><%= t.label :image, '漫画封面' %></br>
      <%= t.file_field :image %>
      <%= t.hidden_field :image_cache %>

      <div class="container">
        <div class="row">
          <div class="col-md-4">
            <br><%= t.label :type_id, '漫画类型' %></br>
            <div class="row">
              <div class="col-md-4">
                <%= t.select(:type_id, Type.all.collect {|p| [p.name, p.id]}) %>
              </div>
              <div class="col-md-8">
                <%= button_tag '新建漫画类型', type: 'button', class: 'btn btn-sm btn-primary', onclick: "window.location.href='/types/new'" %>
              </div>
            </div>
            <br/>
          </div>


          <div class="col-md-4">
            <br><%= t.label :type_id, '漫画国家' %></br>
            <div class="row">
              <div class="col-md-4">
                <%= t.select(:country_id, Country.all.collect {|p| [p.name, p.id]}) %>
              </div>
              <div class="col-md-8">
                <%= button_tag '新建漫画国家', type: 'button', class: 'btn btn-sm btn-primary', onclick: "window.location.href='/countries/new'" %>
              </div>
            </div>
            <br/>
          </div>


          <div class="col-md-4">
            <br><%= t.label :type_id, '漫画题材' %></br>
            <div class="row">
              <div class="col-md-4">
                <%= t.select(:theme_id, Theme.all.collect {|p| [p.name, p.id]}) %>
              </div>
              <div class="col-md-8">
                <%= button_tag '新建漫画题材', type: 'button', class: 'btn btn-sm btn-primary', onclick: "window.location.href='/themes/new'" %>
              </div>
            </div>
            <br/>
          </div>
        </div>
      </div>

      <%= t.submit "提交", class: 'btn btn-sm btn-primary' %>
  <% end %>

</div>


